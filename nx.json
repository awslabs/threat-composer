{
  "extends": "nx/presets/npm.json",
  "npmScope": "monorepo",
  "affected": {
    "defaultBase": "main"
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*"
    ]
  },
  "targetDefaults": {
    "build": {
      "inputs": [
        "default",
        "^default"
      ],
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/lib",
        "{projectRoot}/build",
        "{projectRoot}/coverage",
        "{projectRoot}/test-reports",
        "{projectRoot}/target",
        "{projectRoot}/cdk.out",
        "{projectRoot}/LICENSE_THIRD_PARTY",
        "{projectRoot}/.jsii"
      ],
      "dependsOn": [
        "^build"
      ]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "useDaemonProcess": false,
        "cacheableOperations": [
          "build",
          "test"
        ]
      }
    }
  },
  "//": "~~ Generated by projen. To modify, edit .projenrc.ts and run \"npx projen\"."
}
