#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run ESLint on JavaScript/TypeScript packages
yarn workspaces run eslint

# Run Ruff on Python package - CHECK ONLY (no auto-fix)
# If checks fail, run manually: cd packages/threat-composer-ai && uv run ruff check . --fix && uv run ruff format .
cd packages/threat-composer-ai && \
  uv run ruff check . && \
  uv run ruff format --check .
